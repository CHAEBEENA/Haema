<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".ui.category.book.add.AddBookInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_20">

        <com.marchlab.haema.widget.HaemaFrameLayout
            android:id="@+id/edit_book_info_frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/edit_book_image_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_book_shadow"
            app:layout_constraintStart_toStartOf="@+id/edit_book_image_view"
            app:layout_constraintEnd_toEndOf="@+id/edit_book_image_view"
            app:layout_constraintTop_toTopOf="@+id/edit_book_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/edit_book_image_view"/>

        <ImageView
            android:id="@+id/edit_book_image_view"
            android:layout_width="@dimen/book_image_width"
            android:layout_height="@dimen/book_image_height"
            android:layout_marginTop="@dimen/margin_28"
            android:scaleType="center"
            android:background="@drawable/background_book_image"
            app:layout_constraintStart_toStartOf="@id/edit_book_info_frame"
            app:layout_constraintEnd_toEndOf="@id/edit_book_info_frame"
            app:layout_constraintTop_toTopOf="@id/edit_book_info_frame"
            app:srcCompat="@drawable/img_photo"/>

        <ImageView
            android:id="@+id/edit_book_delete_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:srcCompat="@drawable/img_delete"
            app:layout_constraintStart_toEndOf="@id/edit_book_image_view"
            app:layout_constraintEnd_toEndOf="@id/edit_book_image_view"
            app:layout_constraintTop_toTopOf="@id/edit_book_image_view"
            app:layout_constraintBottom_toTopOf="@id/edit_book_image_view"/>

        <EditText
            android:id="@+id/edit_book_title_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_28"
            android:layout_marginEnd="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_16"
            android:paddingTop="@dimen/padding_4"
            android:paddingBottom="@dimen/padding_4"
            android:background="@null"
            android:textSize="@dimen/normal_text_size"
            android:hint="@string/book_add_title_hint"
            android:textCursorDrawable="@null"
            android:gravity="bottom"
            app:layout_constraintEnd_toEndOf="@id/edit_book_info_frame"
            app:layout_constraintStart_toStartOf="@id/edit_book_info_frame"
            app:layout_constraintTop_toBottomOf="@+id/edit_book_image_view"/>

        <View
            android:id="@+id/edit_book_title_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/book_title_line_height"
            android:layout_marginStart="@dimen/margin_28"
            android:layout_marginEnd="@dimen/margin_28"
            android:background="@color/main_brown"
            app:layout_constraintStart_toStartOf="@id/edit_book_info_frame"
            app:layout_constraintEnd_toEndOf="@id/edit_book_info_frame"
            app:layout_constraintTop_toBottomOf="@id/edit_book_title_edit_text"/>

        <TextView
            android:id="@+id/edit_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/book_add_author"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintStart_toStartOf="@id/edit_book_info_frame"
            app:layout_constraintTop_toBottomOf="@id/edit_book_title_edit_text"/>

        <EditText
            android:id="@+id/edit_book_author_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_28"
            android:background="@null"
            android:textSize="@dimen/normal_text_size"
            android:textCursorDrawable="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/edit_book_author"
            app:layout_constraintEnd_toEndOf="@id/edit_book_info_frame"
            app:layout_constraintTop_toTopOf="@id/edit_book_author"
            app:layout_constraintBottom_toBottomOf="@id/edit_book_author"
            tools:text="이도우"/>

        <TextView
            android:id="@+id/edit_book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_28"
            android:layout_marginTop="@dimen/margin_8"
            android:text="@string/book_add_publisher"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintStart_toStartOf="@id/edit_book_info_frame"
            app:layout_constraintTop_toBottomOf="@id/edit_book_author"/>

        <EditText
            android:id="@+id/edit_book_publisher_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_28"
            android:layout_marginBottom="@dimen/margin_28"
            android:background="@null"
            android:textSize="@dimen/normal_text_size"
            android:textCursorDrawable="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="text"
            app:layout_constraintStart_toEndOf="@id/edit_book_publisher"
            app:layout_constraintEnd_toEndOf="@id/edit_book_info_frame"
            app:layout_constraintTop_toTopOf="@id/edit_book_publisher"
            app:layout_constraintBottom_toBottomOf="@id/edit_book_info_frame"
            tools:text="명지출판사"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
