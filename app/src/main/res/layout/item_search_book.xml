<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_search_result_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_16">

    <ImageView
        android:id="@+id/search_book_image_view"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:scaleType="center"
        android:background="@drawable/background_item_book_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_photo"/>

    <TextView
        android:id="@+id/search_book_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/text_basic"
        android:textSize="@dimen/category_title_size"
        app:layout_constraintEnd_toEndOf="@id/search_book_image_view"
        app:layout_constraintStart_toStartOf="@id/search_book_image_view"
        app:layout_constraintTop_toBottomOf="@id/search_book_image_view"
        tools:text="더 해빙 The Having : 부와 행운을 끌어당기는 힘을 가져보자" />

    <TextView
        android:id="@+id/search_book_author_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/micro_text_size"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="@id/search_book_title_text_view"
        app:layout_constraintStart_toStartOf="@id/search_book_title_text_view"
        app:layout_constraintTop_toBottomOf="@id/search_book_title_text_view"
        tools:text="이서윤,홍주연 저" />
</androidx.constraintlayout.widget.ConstraintLayout>