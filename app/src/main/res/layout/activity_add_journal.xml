<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_journal_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".ui.main.journal.add.AddJournalActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_journal_tools_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/add_journal_contents_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.marchlab.haema.widget.HaemaFrameLayout
                    android:id="@+id/add_journal_frame_layout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/add_journal_edit_text"/>

                <TextView
                    android:id="@+id/add_journal_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_28"
                    android:layout_marginTop="@dimen/margin_28"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/font_kyobo_handwriting"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="2020년 5월 7일 목요일"/>

                <ImageView
                    android:id="@+id/add_journal_image_view"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_marginTop="@dimen/margin_22"
                    android:scaleType="centerCrop"
                    android:background="@color/main_background_dark"
                    android:elevation="4dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/add_journal_date_text_view"/>

                <ImageView
                    android:id="@+id/add_journal_masking_tape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/add_journal_image_view"
                    app:layout_constraintEnd_toEndOf="@id/add_journal_image_view"
                    app:layout_constraintTop_toTopOf="@id/add_journal_image_view"
                    app:layout_constraintBottom_toTopOf="@id/add_journal_image_view"
                    app:srcCompat="@drawable/img_masking_tape_beige"/>

                <ImageView
                    android:id="@+id/add_journal_delete_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/add_journal_image_view"
                    app:layout_constraintEnd_toEndOf="@id/add_journal_image_view"
                    app:layout_constraintTop_toTopOf="@id/add_journal_image_view"
                    app:layout_constraintBottom_toTopOf="@id/add_journal_image_view"
                    app:srcCompat="@drawable/img_delete" />

                <EditText
                    android:id="@+id/add_journal_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="@dimen/margin_28"
                    android:layout_marginEnd="@dimen/margin_28"
                    android:paddingBottom="@dimen/padding_20"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/font_kyobo_handwriting"
                    android:lineSpacingExtra="9sp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_journal_image_view"
                    tools:text="@string/nanjoong"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/add_journal_emotion_view"
                android:layout_width="@dimen/lottie_width"
                android:layout_height="@dimen/lottie_height"
                app:lottie_repeatCount="1"
                app:layout_constraintEnd_toEndOf="@id/add_journal_contents_layout"
                app:layout_constraintTop_toTopOf="@id/add_journal_contents_layout"
                app:layout_constraintBottom_toTopOf="@id/add_journal_contents_layout"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_journal_tools_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/add_journal_toolbar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/add_journal_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:padding="@dimen/padding_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_photo" />

        <TextView
            android:id="@+id/add_journal_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_20"
            android:padding="@dimen/padding_8"
            android:text="@string/done"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigator_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/add_journal_fragment_container_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/add_journal_fragment_container_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="2"/>

    <FrameLayout
        android:id="@+id/add_journal_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_journal_fragment_container_top_guideline"
        app:layout_constraintBottom_toTopOf="@id/add_journal_fragment_container_bottom_guideline"/>

    <FrameLayout
        android:id="@+id/add_journal_loading_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>