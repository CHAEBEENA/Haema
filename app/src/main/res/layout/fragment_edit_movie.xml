<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_movie_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ui.category.movie.edit.EditMovieFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/edit_movie_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_movie_page_navigator"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_movie_page_navigator"
        android:layout_width="0dp"
        android:layout_height="@dimen/category_navigator_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/edit_movie_previous_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:padding="@dimen/padding_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/img_back_black"/>

        <View
            android:id="@+id/page_indicator1"
            android:layout_width="@dimen/category_indicator_width"
            android:layout_height="@dimen/category_indicator_height"
            android:layout_marginEnd="@dimen/margin_8"
            android:background="@drawable/indicator_category_view_pager_selected"
            app:layout_constraintEnd_toStartOf="@id/page_indicator2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/page_indicator2"
            android:layout_width="@dimen/category_indicator_width"
            android:layout_height="@dimen/category_indicator_height"
            android:layout_marginStart="@dimen/margin_8"
            android:background="@drawable/indicator_category_view_pager_not_selected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/page_indicator3"
            android:layout_width="@dimen/category_indicator_width"
            android:layout_height="@dimen/category_indicator_height"
            android:layout_marginStart="@dimen/margin_8"
            android:background="@drawable/indicator_category_view_pager_not_selected"
            app:layout_constraintStart_toEndOf="@id/page_indicator2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/edit_movie_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_12"
            android:padding="@dimen/padding_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/img_category_next_page"/>

        <TextView
            android:id="@+id/edit_movie_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_12"
            android:padding="@dimen/padding_8"
            android:text="@string/movie_add_skip"
            android:textSize="@dimen/navigator_text_size"
            android:textColor="@color/text_basic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/edit_movie_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_12"
            android:padding="@dimen/padding_8"
            android:text="@string/done"
            android:textSize="@dimen/navigator_text_size"
            android:textColor="@color/text_basic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>