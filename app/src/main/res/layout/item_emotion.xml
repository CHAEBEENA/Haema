<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emotion_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/emotion_selected_background"
        android:layout_width="68dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@drawable/background_emotion_selected"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/emotion_image_view"
        app:layout_constraintEnd_toEndOf="@id/emotion_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/emotion_image_view"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/emotion_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/text_display"
        app:layout_constraintStart_toStartOf="@id/emotion_image_view"
        app:layout_constraintEnd_toEndOf="@id/emotion_image_view"
        app:layout_constraintTop_toBottomOf="@id/emotion_image_view"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="분노"/>
</androidx.constraintlayout.widget.ConstraintLayout>